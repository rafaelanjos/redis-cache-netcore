@model IEnumerable<RedisLab.Domain.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-login="@item.Login">@Html.DisplayFor(modelItem => item.Login)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
        </tr>
}
    </tbody>
</table>
